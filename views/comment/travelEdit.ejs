<%- include('../partials/header') %>
<div class="container">
    <h1 class="create_title">Edit Comment</h1>
    <form action="/blog/travel/<%=travelId%>/comment/<%=foundComment._id%>?_method=PUT" method="POST">
        <div class="row">
            <div class="create_new">
                <div class="form-group">
                    <label>Comment</label>
                    <input class="form-control" type="text" name="comment[text]" value="<%=foundComment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Edit</button>
                </div>
            </div>
        </div>
    </form>
</div>

