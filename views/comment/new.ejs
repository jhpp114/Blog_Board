<%- include('../partials/header') %>
<div class="container">
    <h1 class="create_title">Add New Comment to <%=foundSoccer.teamname%></h1>
    <form action="/blog/soccer/<%=foundSoccer._id%>/comment" method="POST">
        <div class="row">
            <div class="create_new">
                <div class="form-group">
                    <!-- Todo: This will be login user when 
                                signin implementation finishes
                                for now just hardcode
                            -->
                    <label>Author</label>
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <label>Comment</label>
                    <textarea class="form-control" name="comment[text]" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Post Comment</button>
                </div>
                <a href="/blog/soccer/">Go Back</a>
            </div>
    
        </div>
    </form>
</div>
<%- include('../partials/footer') %>