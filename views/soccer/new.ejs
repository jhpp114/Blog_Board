<%- include('../partials/header') %>
<div class="container">
    <h1 class="create_title">Post New Soccer</h1> 
    <form action="/blog/soccer" method="POST">
        <div class="row">
            <div class="create_new">
                <div class="form-group">
                    <label>Team name</label>
                    <input class="form-control" type="text" name="soccer[teamname]" placeholder="team name">
                </div>
                <div class="form-group">
                    <label>Image url</label>
                    <input class="form-control" type="text" name="soccer[image]" placeholder="image url">
                </div>  
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="soccer[description]" cols="30" rows="10"></textarea>
                </div>
                <button class="btn btn-sm btn-primary btn-block">POST</button>
            </div>
        </div>   
    </form>
</div>


<%- include('../partials/footer') %>