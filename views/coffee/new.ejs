<%- include('../partials/header') %>
<div class="container">
    <h1 class="create_title">Post New Coffee</h1>
    <form action="/blog/coffee" method="POST">
        <div class="row">
            <div class="create_new">
                <div class="form-group">
                    <label>Coffee Place</label>
                    <input class="form-control" type="text" name="coffee[coffeename]"placeholder="text">
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" name="coffee[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="coffee[description]"  cols="30" rows="10"></textarea>
                </div>
                <button class="btn btn-sm btn-primary btn-block">POST</button>
            </div>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>
