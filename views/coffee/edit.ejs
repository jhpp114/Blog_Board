<%- include('../partials/header') %>
<div class="container">
   <h2 class="create_new">Edit <%=editCoffeeData.coffeename%></h2>
    <form action="/blog/coffee/<%=editCoffeeData._id%>?_method=PUT" method="POST">
        <div class="row">
            <div class="create_new">
                <div class="form-group">
                    <label>Coffee Place</label>
                    <input class="form-control" type="text" name="coffee[coffeename]" value="<%=editCoffeeData.coffeename%>">
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" name="coffee[image]" value="<%=editCoffeeData.image%>">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="coffee[description]"cols="30" rows="10"><%=editCoffeeData.description%></textarea>
                </div>
                <button class="btn btn-primary btn-block">Edit</button>
            </div>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>